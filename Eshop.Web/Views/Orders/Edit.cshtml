@model Eshop.Domain.Entities.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Уреди нарачка";
}

<h2>Уреди нарачка</h2>

<div class="card p-4 mb-4">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="CustomerName" class="form-label">Име</label>
            <input asp-for="CustomerName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CustomerSurname" class="form-label">Презиме</label>
            <input asp-for="CustomerSurname" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CustomerPhone" class="form-label">Телефон</label>
            <input asp-for="CustomerPhone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CustomerAddress" class="form-label">Адреса</label>
            <input asp-for="CustomerAddress" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Зачувај</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Откажи</a>
    </form>
</div>
